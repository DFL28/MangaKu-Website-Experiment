{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/manga",
      "destination": "/api/manga.js"
    },
    {
      "source": "/api/manga/:id/detail",
      "destination": "/api/detail.js?id=:id"
    },
    {
      "source": "/api/manga/:id/chapters",
      "destination": "/api/chapters.js?id=:id"
    },
    {
      "source": "/api/chapter/:id/pages",
      "destination": "/api/pages.js?id=:id"
    },
    {
      "source": "/api/search",
      "destination": "/api/search.js"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "maxDuration": 60,
      "memory": 1024
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        },
        {
          "key": "Cache-Control",
          "value": "s-maxage=300, stale-while-revalidate=600"
        }
      ]
    },
    {
      "source": "/(.*\\.(js|css|html))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    }
  ]
}
